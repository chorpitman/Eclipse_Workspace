package сycles;

//Найти сумму четных чисел и их количество в диапазоне от 1 до 99

public class Task1 {

	public static void main(String[] args) 
	{
		int t = 0;
		int sum = 0;
		
		for (int i = 1; i <= 99; ++i)	
		{
			if( i%2 == 0)
			{
				sum = sum+i;
				t++;
				System.out.print(i + "; ");
				
			}	
			
		}
		System.out.println();
		System.out.println("Количество: " + t);
		System.out.println("Сумма: " + sum);
}
	}