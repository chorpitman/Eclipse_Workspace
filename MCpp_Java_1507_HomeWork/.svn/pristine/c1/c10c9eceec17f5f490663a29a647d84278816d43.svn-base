package Conditional_Operatos;

//Если а – четное посчитать а*б, иначе а+б

public class task1_anoth_method {

	public static void main(String[] args) {
		int a=6;
		int b=-7;
		
		if (a%2==0)
		{
			System.out.println("Число а не четное, результат вычислений равен" + a*b);
			
		}
		else 
			System.out.println("Число а не четное, результат вычислений равен: " + (a+b));
			}

}
