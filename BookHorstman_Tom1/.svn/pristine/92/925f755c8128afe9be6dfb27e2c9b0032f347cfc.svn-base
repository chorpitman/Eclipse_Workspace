package Glava_03;

import java.util.Scanner;

public class Iinput_Output_Scanner 
{

	public static void main(String[] args) 

	{
		
		Scanner input = new Scanner(System.in);
		
		// Получения первой строки входных данных
		System.out.print("Тварь, Как вас зовут?");
		String name = input.nextLine();
		
		// Получение целочисленного значения
		System.out.print("Тварь, сколь Вам лет?");
		int age = input.nextInt();
		
		//Отображение информации в консольном окне
		System.out.println("Тварь " + name + ", в следующем году Вам будет: " + (age+1));
		
		
	}

}
