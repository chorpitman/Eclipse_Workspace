package lesson1;

public class Task4 {
	//Посчитать выражение макс(а*б*с, а+б+с)+3

	public static void main(String[] args) 
	{

		int a=1;
		int b=2;
		int c=5;

		int x=a+b+c;
		int z=a*b*c;

		if (x>z) {
			x=x+3;
			System.out.println(" (A+B+C) + 3 = " + x);
		} 

		else {
			z=z+3;
			System.out.println(" (A*B*C) + 3 = " + z );
		}

	}

}
